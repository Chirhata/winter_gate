<div class="question top-main">
  <div class="question form">
    <h2>秘密の質問に解答してください</h2>
    <% if @error_message %>
    <div class="error_message">
      <%= @error_message %>
    </div>
    <% end %>
    <%= form_for @ans,url:{action: :answer_check} do |u|%>
      <h2><%=@ans.question%></h2>
      <div class="row">
        <div class="input-field col s10 push-s1">
        <%= u.text_field :answer , value:nil%>
        </div>
      </div>
      <p></p>
      <%=u.submit '送信'%>
    <% end %>
  </div>
</div>
