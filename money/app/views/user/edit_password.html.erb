<div class="edit_menu_password top-main">
  <div class="edit_menu_password form">
    <h1>現在のパスワードを入力してください。</h1>
    <% if @error_message %>
      <div class="error_message">
        <%= @error_message %>
      </div>
    <% end %>
    <%= form_for @user,url:{action: :check_password} do |u|%>
      <%=u.text_field :o_password%>
      <p></p>
      <%=u.submit '送信'%>
    <% end %>
  </div>
</div>
