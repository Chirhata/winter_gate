require "active_support/time"
<div class="edit_target top-main">
  <div class="edit_target message">
    <% time = Time.now %>
    <h1>目標などの変更フォーム</h1>
    <h2>変更しない場合空白のままにしてください</h2>
    <% if @error_message %>
    <div class="error_message">
      <%= @error_message %>
    </div> 
    <% end %>
    <%= form_for @user,url:{action: :edit_target_save} do |m|%>
      <h2>日付を入力してください。</h2>
      <%= m.date_select :money_limit_day, {:use_month_numbers => true, :start_year => time.year, :end_year => time.year + 100}%>
      <h2>いくら残すかを設定してください。</h2>
      <%=m.number_field :money_limit,{:min => 1, :max =>99999999}%>
      <h2>予測される今月の支出を入力してください。</h2>
      <%=m.number_field :income,{:min => 1, :max =>99999999}%>
      <p></p>
      <%=m.submit '送信'%>
    <% end %>
  </div>
</div>
